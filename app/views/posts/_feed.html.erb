<div class="column is-half">
    <article class="media box">
        <%= body_gravatar_image_tag %>
        <div class="media-content">
            <%= render_form %>
        </div>
    </article>


<% @posts.each do |post| %>
   <div class="box">
    <article class="media ">

        <div class="media-content">
            <div class="content">
                    <strong><%= body_current_user %></strong><br/>
                    <small><%= body_current_username %></small><br/>
                    <p><%= post.post %></p>
            </div>

<nav class="level">
    <div class="level-left is-mobile d-flex">
        <%= icon_post%>
        <%= link_to edit_post_path(post), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?"} do %>
            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
        <% end %>
    </div>
</nav>
            
        </div>
    </article>
</div>

<%end%>
</div>