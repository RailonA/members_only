<div class="column is-half">
    <article class="media box">
        <%= body_gravatar_image_tag %>
        <div class="media-content">
            <%= render_form %>
        </div>
    </article>


<% @posts.each do |post| %>
   <div class="box">
    <article class="media ">
            <figure class="media-left">
						<%= gravatar_image_tag(post.user.email, size: 64, alt: current_user.name) %>
            </figure>
        <div class="media-content">
            <div class="content">
                    <strong><%= post.user.name %></strong><br/>
                    <small><%= post.user.username %></small><br/>
                    <p><%= post.post %></p>
            </div>

            <%= render  partial: "posts/icon" %>

            
        </div>
    </article>
</div>

<%end%>
</div>